
<% include ./main/header %>
<% include ./main/navbar %>
<div class="product">

<h1 class="title">Shop Our Latest Styles</h1>
    <p class="title2" >shop</p>
    <div class="container" style=" padding:20px 220px;">
        <div class="row">
            <div class="col col-12 col-lg-6 col-md-6 col-sm-12">
                    <form class="form-inline my-2 my-lg-0">
                            <input class="form-control  type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success " type="submit">Search</button>
                    </form>

            </div>
            <div class="col col-12 col-lg-6 col-md-6 col-sm-12">
                    <form class="form-inline my-2 my-lg-0"  method='GET' action='/' >
                            <select class="form-control " name="category" aria-label="filter" style="padding:0px 60px">
                                <option value="all">all-no filter</option>
                                <option value="tulip">Tulip</option>
                                <option value="Sunflower">Sunflower</option>
                                <option value="Daffodil">Daffodil</option>
                            </select>
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit" value="filter">Filter</button>
                    </form>
                    
            </div>
        </div>
    </div>
    
<div class="container">
    <div class="row">
        <% for(var flower of flowers ) { %>
        <div class="col col-12 col-sm-12 col-md-6 col-lg-4">
                <div class="card" style="width: 21rem; height:40rem ;">
                        <img src="<%= flower.photo %>" class="card-img-top pimg" alt="...">
                        <div class="card-body">
                          <h3 class="card-title ptitle"><%= flower.name %></h3>
                          <!-- <p class="card-text"><%= flower.discription %></p> -->
                          <h4  class="price"><%= flower.price %></h4>
                          <form action="/cart" method="post">
                            <input type="hidden" name="id" value="<%= flower.productId %>">
                            <input type="hidden" name="name" value="<%= flower.name %>">
                            <input type="hidden" name="pirce" value="<%= flower.price %>">
                            <input type="hidden" name="redirect" value="/">
                            <input type="submit" value="add to chart" class="btn btn-primary" style="margin-bottom:4px ">
                          </form>
                          <a href="/product/<%=flower.productId %>" class="btn btn-primary">more details</a>
                         </div>
                </div>
        </div>
        <%}%>
        
    </div>
</div>
</div>
<% include ./main/footer %>
